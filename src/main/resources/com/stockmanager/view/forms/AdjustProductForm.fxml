<VBox fx:controller="com.stockmanager.controller.forms.AdjustProductFormController"
      prefHeight="424.0" prefWidth="663.0" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets topRightBottomLeft="40"/>
    </padding>
    <children>
        <Label prefHeight="38.0" prefWidth="222.0" text="Produto">
            <font>
                <Font name="Century Gothic" size="17.0" />
            </font>
        </Label>
        <ComboBox fx:id="cmbProduct" prefHeight="25.0" prefWidth="164.0" editable="true"/>

        <Label prefHeight="38.0" prefWidth="222.0" text="Nome do produto">
            <font>
                <Font name="Century Gothic" size="17.0" />
            </font>
        </Label>
        <TextField fx:id="txtName" prefHeight="25.0" prefWidth="164.0" maxWidth="200"/>
        <Label prefHeight="38.0" prefWidth="150.0" text="PreÃ§o" >
            <font>
                <Font name="Century Gothic" size="17.0" />
            </font>
        </Label>
        <TextField fx:id="txtPrice" alignment="TOP_LEFT" prefHeight="26.0" prefWidth="164.0"  maxWidth="150"/>
        <Label prefHeight="38.0" prefWidth="124.0" text="Estado">
            <font>
                <Font name="Century Gothic" size="17.0" />
            </font>
        </Label>
        <CheckBox fx:id="checkBox" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="16.0" prefWidth="82.0" text="Ativo">
            <font>
                <Font name="Century Gothic" size="11.0" />
            </font>
        </CheckBox>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="20" />
            </padding>
            <children>
                <Button onAction="#cancelHandler"
                        styleClass="lightButton" mnemonicParsing="false" prefHeight="49.0" prefWidth="130.0"
                        stylesheets="@../css/styles.css" text="Cancelar">
                    <font>
                        <Font name="Century Gothic" size="15.0"/>
                    </font>
                </Button>
                <Button onAction="#confirmHandler"
                        styleClass="darkButton" mnemonicParsing="false" prefHeight="49.0" prefWidth="130.0"
                        stylesheets="@../css/styles.css" text="Confirmar">
                    <font>
                        <Font name="Century Gothic" size="15.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
