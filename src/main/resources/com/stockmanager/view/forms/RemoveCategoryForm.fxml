<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox fx:controller="com.stockmanager.controller.forms.RemoveCategoryFormController"
      prefHeight="249.0" prefWidth="600.0" xmlns:fx="http://javafx.com/javafx/fxml">
    <padding>
        <Insets topRightBottomLeft="40" />
    </padding>
    <children>
        <Label prefHeight="38.0" prefWidth="265.0" text="Categoria">
            <font>
                <Font name="Century Gothic" size="21.0" />
            </font>
        </Label>

        <ComboBox fx:id="cmbCategory" prefHeight="25.0" prefWidth="164.0" editable="true"/>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="20" />
            </padding>
            <children>
                <Button onAction="#cancelHandler"
                        styleClass="lightButton" mnemonicParsing="false" prefHeight="49.0" prefWidth="130.0"
                        stylesheets="@../css/styles.css" text="Cancelar">
                    <font>
                        <Font name="Century Gothic" size="15.0"/>
                    </font>
                </Button>
                <Button onAction="#confirmHandler"
                        styleClass="darkButton" mnemonicParsing="false" prefHeight="49.0" prefWidth="130.0"
                        stylesheets="@../css/styles.css" text="Confirmar">
                    <font>
                        <Font name="Century Gothic" size="15.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
